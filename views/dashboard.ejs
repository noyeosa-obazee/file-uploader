<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Dashboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="dashboard">

  <div class="dashboard-container">
    
  
<nav class="navbar">
  <a href="/dashboard" class="nav-brand">
    <span>üìÇ</span> FileX
  </a>

  <div class="nav-menu">
    <span class="user-email">Hi, <%= user.email %></span>
    
    <!-- <a href="/dashboard" class="nav-link">Home</a> -->
    <a href="/logout" class="nav-link btn-logout">Log Out</a>
  </div>
</nav>

    <div class="dashboard-header">
  
  <div class="breadcrumbs">
    <% if (currentFolder) { %>
      <a href="/dashboard">Home</a> 
      <span style="color: #9ca3af;">/</span> 
      <span class="current-path"><%= currentFolder.name %></span>
    <% } else { %>
      <span class="current-path">Home</span>
    <% } %>
  </div>

  <div class="header-actions">
    
    <% if (!currentFolder) { %>
      <form action="/folder" method="POST" style="display: flex; gap: 5px;">
        <input type="text" name="folderName" placeholder="New Folder..." class="mini-input" required>
        <button type="submit" class="btn-create">+ Create</button>
      </form>
    <% } %>

    <form action="/upload-file" method="POST" enctype="multipart/form-data" style="display: flex; gap: 5px; align-items: center;">
      <input type="hidden" name="folderId" value="<%= currentFolder ? currentFolder.id : '' %>">
      
      <input type="file" name="uploaded_file" required class="mini-input" style="background: white;">
      <button type="submit" class="btn-upload">
        <span>‚¨Ü</span> Upload
      </button>
    </form>

  </div>

</div>
<section>
<% if (locals.folders && folders.length > 0) { %>
  <h3 style="margin: 2rem 0 1rem 0; color: #4b5563;">
    Folders
  </h3>
  
  <div class="files-grid">
    <% folders.forEach(folder => { %>
      
      <div class="file-card folder-card">
        
        <a href="/folder/<%= folder.id %>" style="text-decoration: none;">
          <div class="file-preview">
            <span class="folder-icon">üìÇ</span>
          </div>
        </a>

        <div class="file-info">
          
          <a href="/folder/<%= folder.id %>" style="text-decoration: none; flex-grow: 1;">
            <div class="file-name"><%= folder.name %></div>
          </a>

          <div class="file-actions">
                  <a href="/folder/<%=folder.id%>" class="btn-link">Open</a>
                   <a href="#" target="_blank" class="btn-link delete-btn">Delete</a>
                </div>
        
        </div>
      </div>

    <% }) %>
  </div>
<% } %>
</section>
    <section>
      
      <h3 style="margin: 2rem 0 1rem 0; color: #4b5563;">
    Files
  </h3>
     
      
      <% if (!files || files.length === 0) { %>
        <p style="color: #6b7280;">No files uploaded yet.</p>
      <% } else { %>
        
        <div class="files-grid">
          <% files.forEach(file => { %>
            <div class="file-card">
              
              <div class="file-preview">
                <% if (file.fileType.startsWith('image/')) { %>
                  <img src="<%= file.url %>" alt="<%= file.originalName %>">
                <% } else if (file.fileType === 'application/pdf') { %>
                  <span>üìÑ</span> 
                <% } else { %>
                  <span>üìÅ</span>
                <% } %>
              </div>

              <div class="file-info">
                <div class="file-name"><%= file.originalName %></div>
                <div class="file-meta">
                  <%= (file.size / 1024).toFixed(1) %> KB ‚Ä¢ <%= formatDate(file.uploadedAt) %>
                </div>
                
                <div class="file-actions">
                  <a href="/file/<%= file.id %>/download" download class="btn-link">Download</a>
                  <a href="<%= file.filepath %>" target="_blank" class="btn-link">View</a>
                   <a href="/file/<%= file.id %>/delete" class="btn-link delete-btn">Delete</a>
                </div>
              </div>

            </div>
          <% }) %>
        </div>

      <% } %>
    </section>

  </div>

</body>
</html>