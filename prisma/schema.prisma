generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  username String? @unique
  files    File[]
}

model File {
  id          Int     @id @default(autoincrement())
  url         String
  description String?
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
